{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-md-9 col-xs-12">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Логин</th>
                <th>Email</th>
                <th>Cтатус</th>
                <th>Последний визит</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for object in objects %}
                <tr>
                    <th class="row">{{ object.id }}</th>
                    <td>{{ object.username }}</td>
                    <td>{{ object.email }}</td>
                    <td>
                        {% if (object.locked) %}
                            <button class="btn btn-danger btn-xs disabled">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </button>
                        {% else %}
                            <button class="btn btn-success btn-xs disabled">
                                <i class="fa fa-unlock" aria-hidden="true"></i>
                            </button>
                        {% endif %}
                    </td>
                    <td>{{ object.lastLogin | date('Y-m-d H:i:s') }}</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('client_admin.user.update',
                            {'username': object.username}) }}" type="button" class="btn btn-warning">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a href="#" data-alias="{{ object.username }}"
                               type="button" class="btn btn-danger" name="btn-delete">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">

        </div>
    </div>
    <div class="col-md-3 col-xs-12">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Фильтр</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ include ('users/form/filter.html.twig', {'filter': filterForm}) }}
                </div>
            </div>
        </div>
        <div class="col-xs-12">
            <a href="{{ path('client_admin.user.create') }}" class="btn btn-success btn-block">Добавить</a>
        </div>
    </div>
{% endblock %}

