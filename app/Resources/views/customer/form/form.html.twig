{{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="company">
        Компания:
    </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
        {{ form_widget(form.company) }}
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="city">
        Город:
    </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
        {{ form_widget(form.address.city) }}
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="street">
        Улица:
    </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
        {{ form_widget(form.address.street) }}
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="unp">
        УНП:
    </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
        {{ form_widget(form.address.unp) }}
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="work">
        Городской тел.:
    </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
        {{ form_widget(form.contacts.work) }}
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="mobile">
        Мобильный тел.:
    </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
        {{ form_widget(form.contacts.mobile) }}
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="fax">
        Факс:
    </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
        {{ form_widget(form.contacts.fax) }}
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
        Email:
    </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
        {{ form_widget(form.contacts.email) }}
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="descr">
        Информация:
    </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
        {{ form_widget(form.info) }}
    </div>
</div>
{% if is_granted('ROLE_ADMIN') %}
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="user">
            Сотрудник:
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            {{ form_widget(form.user) }}
        </div>
    </div>
{% else %}
    {{ form_widget(form.user) }}
{% endif %}

{{ form_row(form.save, { 'label': 'Cохранить ', 'attr': {'class': 'btn btn-success pull-right'} }) }}

{{ form_end(form) }}