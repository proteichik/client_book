{{ form_start(filter, {'method': 'GET'}) }}
<div class="form-group form-group-sm">
    <label>Дата:</label>
    {{ form_widget(filter.date) }}
</div>
<p>
    <input type="submit" class="btn btn-primary btn-sm btn-block" value="Поиск" />
</p>

{{ form_end(filter) }}

<script type="text/javascript">
    $( document ).ready(function() {
        $('#cal_left_date').datepicker({
            format: 'yyyy-mm-dd'
        });
        $('#cal_right_date').datepicker({
            format: 'yyyy-mm-dd'
        });
    });
</script>